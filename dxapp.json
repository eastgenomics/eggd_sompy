{
  "name": "eggd_sompy",
  "title": "eggd_sompy",
  "summary": "Somatic Variant Benchmarking Tool",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "truth_vcf",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf", "*.vcf.gz"],
      "help": "Truth VCF from Horizon"
    },
    {
      "name": "query_vcf",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf", "*.vcf.gz"],
      "help": "Query VCF from in-house pipeline"
    },
    {
      "name": "panel_bed",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"],
      "help": "Bed file"
    },
    {
      "name": "truth_high_confidence_bed",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"],
      "help": "Truth high confidence file for the truth VCF"
    },
    {
      "name": "reference_file",
      "class": "file",
      "optional": false,
      "patterns": ["*.fa", "*.fa.gz"],
      "help": "Reference file"
    },
    {
      "name": "pkrusche_happy_docker",
      "class": "file",
      "optional": false,
      "patterns": ["*.tar.gz"],
      "help": "compressed pkrusche happy docker image"
    },
    {
      "name": "prefix",
      "label": "Output prefix",
      "class": "string",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "output_csv",
      "class": "file",
      "patterns": ["*"],
      "help": ""
    },
    {
      "name": "output_features_csv",
      "class": "file",
      "patterns": ["*"],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/eggd_sompy.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "assetDepends": [
      {
        "name": "htslib",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/htslib/htslib_v1.15.0",
        "version": "1.15.0"
      }
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
