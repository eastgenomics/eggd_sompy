{
  "name": "eggd_sompy",
  "title": "eggd_sompy",
  "summary": "Somatic Variant Benchmarking Tool",
  "dxapi": "1.0.1",
  "version": "1.0.1",
  "authorizedUsers": [
    "org-emee_1"
  ],
  "developers":[
    "org-emee_1"
  ],
  "inputSpec": [
    {
      "name": "query_vcf_string",
      "class": "string",
      "optional": true,
      "help": "The query sample name to run sompy on. If not provided, no outputs are generated"
    },
    {
      "name": "truth_vcf",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf", "*.vcf.gz"],
      "help": "Truth VCF from Horizon"
    },
    {
      "name": "query_vcf",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf", "*.vcf.gz"],
      "help": "Query VCF from in-house pipeline"
    },
    {
      "name": "panel_bed",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"],
      "help": "Bed file"
    },
    {
      "name": "truth_high_confidence_bed",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"],
      "help": "Truth high confidence file for the truth VCF"
    },
    {
      "name": "reference_file",
      "class": "file",
      "optional": false,
      "patterns": ["*.fa", "*.fa.gz"],
      "help": "Reference file",
      "default": {"$dnanexus_link": "file-Fy4gjFj41zgGjKJ85FYYPX4q"}
    },
    {
      "name": "reference_index_file",
      "class": "file",
      "optional": false,
      "patterns": ["*.fa.fai"],
      "help": "Reference file",
      "default": {"$dnanexus_link": "file-FyFGvzQ41zgBq7xf4Gy9Q28g"}
    },
    {
      "name": "pkrusche_happy_docker",
      "class": "file",
      "optional": false,
      "patterns": ["*.tar.gz"],
      "help": "compressed pkrusche happy docker image"
    }
  ],
  "outputSpec": [
    {
      "name": "output_csv",
      "class": "file",
      "patterns": ["*"],
      "help": "",
      "optional": true
    },
    {
      "name": "output_features_csv",
      "class": "file",
      "patterns": ["*"],
      "help": "",
      "optional": true
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "file": "src/eggd_sompy.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
